# Fissio MGMT Configuration
# Copy to .env and customize

# Secret key for Rails (generate with: openssl rand -hex 64)
SECRET_KEY_BASE=change_this_to_a_secure_random_value

# Hostname for links in emails (change for production)
OPENPROJECT_HOST=localhost:8082

# Set to true when behind HTTPS reverse proxy
OPENPROJECT_HTTPS=false

# SMTP Configuration (optional - for email notifications)
SMTP_ADDRESS=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
